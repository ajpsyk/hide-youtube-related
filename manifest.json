{
    "name": "Hide Youtube Sidebar",
    "version": "1.0.0",
    "description": "Button for hiding the youtube sidebar column for a distraction-free experience.",
    "permissions": ["storage", "tabs", "scripting"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/visibility.svg",
          "assets/visibility_off.svg"
        ],
        "matches": ["https://*.youtube.com/*"]
      }
    ],
    "manifest_version": 3
}
